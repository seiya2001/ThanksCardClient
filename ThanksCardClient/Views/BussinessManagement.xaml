<UserControl x:Class="ThanksCardClient.Views.BussinessManagement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"          
             xmlns:local="clr-namespace:ThanksCardClient"
             prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid Margin="0,50,0,0">
        <StackPanel>
            <TextBlock Text="経営管理画面ログインページ" FontSize="25" Margin="0,-35,0,34.8" />
            <PasswordBox local:PasswordBoxHelper.Password="{Binding BusinessPassword.Password}" PasswordChar="●" Width="300" Height="25" Margin="0,200,0,0"/>
            <Button Content="ログイン" Command="{Binding BusinessLogonCommand}" Width="120" Margin="0,50,0,0" />
        </StackPanel>
    </Grid>
</UserControl>

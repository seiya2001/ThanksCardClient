<UserControl x:Class="ThanksCardClient.Views.MainMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
    prism:ViewModelLocator.AutoWireViewModel="True" Height="200" Width="300">

    <Grid Margin="0,0,0,0" DockPanel.Dock="Top">
        <Button Content="感謝カード作成" Command="{Binding ShowThanksCardCreateCommand}" Margin="10,25,160,130"/>
        <Button Content="感謝カード一覧" Command="{Binding ShowThanksCardListCommand}"  Margin="10,110,160,50" />
        <Button Content="Q＆A" Margin="160,110,10,50"/>
        <Button Content="送信ボックス" Margin="160,25,10,130"/>

        <StackPanel  Orientation="Horizontal">
            <Button Content="ログアウト" Command="{Binding LogoffCommand}" Margin="40,182,20,0" />
            <Button Content="人事ログイン" Margin="0,182,20,0" Command="{Binding ShowHumanManagementCommand}"/>
            <Button Content="経営ログイン" Margin="0,182,40,0" Command="{Binding ShowBussinessManagementCommand}" />
        </StackPanel>
    </Grid>
</UserControl>

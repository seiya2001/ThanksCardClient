<UserControl x:Class="ThanksCardClient.Views.Footer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid>
        <StackPanel>
            <Button Content="感謝カード作成" Command="{Binding ShowThanksCardCreateCommand}"/>
            <Button Content="感謝カード一覧" Command="{Binding ShowThanksCardListCommand}"/>
            <Button Content="社員管理画面" Command="{Binding ShowUserMstCommand}" IsEnabled="{Binding AuthorizedUser.IsAdmin}"/>
            <Button Content="部署管理画面" Command="{Binding ShowDepartmentMstCommand}" IsEnabled="{Binding AuthorizedUser.IsAdmin}"/>
            <Button Content="カテゴリ登録画面" Command="{Binding ShowTagMstCommand}" IsEnabled="{Binding AuthorizedUser.IsAdmin}"/>
            <Button Content="ログアウト" Command="{Binding LogoffCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>

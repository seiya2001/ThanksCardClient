<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="ThanksCardClient.Views.Footer"             
             prism:ViewModelLocator.AutoWireViewModel="True" Height="94.156" d:DesignWidth="92.106">
    <Grid Margin="0,0,0,314">
        <StackPanel Margin="0,61,0,-253" RenderTransformOrigin="0.523,0.334" Height="192" VerticalAlignment="Top" >

            <Button Content="感謝カード作成" Command="{Binding ShowThanksCardCreateCommand}"/>
            <Button Content="感謝カード一覧" Command="{Binding ShowThanksCardListCommand}"/>
            <Button Content="社員登録画面" Command="{Binding ShowUserMstCommand}" IsEnabled="{Binding AuthorizedUser.IsAdmin}"/>
            <Button Content="部署登録画面" Command="{Binding ShowDepartmentMstCommand}" IsEnabled="{Binding AuthorizedUser.IsAdmin}"/>
            <Button Content="カテゴリ登録画面" Command="{Binding ShowTagMstCommand}" IsEnabled="{Binding AuthorizedUser.IsAdmin}"/>
            <Button Content="ログアウト" Command="{Binding LogoffCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>

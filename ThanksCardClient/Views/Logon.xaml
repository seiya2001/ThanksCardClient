<UserControl x:Class="ThanksCardClient.Views.Logon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid>
        <StackPanel Margin="50,25,280,0">
            <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" />
            <TextBlock Text="Name:" Width="120"/>
            <TextBox Text="{Binding User.Name}" Width="120"/>
            <TextBlock Text="Password:" Width="120"/>
            <TextBox Text="{Binding User.Password}" Width="120" />
            <Button Content="Logon" Command="{Binding LogonCommand}" Width="120"/>
        </StackPanel>
    </Grid>
</UserControl>
